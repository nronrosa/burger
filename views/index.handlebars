<div class="page-title" align="center">Eat-Da-Burger!</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Mmmm, Burgers to eat!</h2>
            <ul class="burger-list">
                {{#each burgers}}
                {{#unless devoured}}
                {{this.id}}. {{this.burger}} {{this.burger_name}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Yum Yum! Devoured!</h2>
            <ul class="burger-list">
                {{#each burgers}}
                {{#if devoured}}
                {{this.id}}. {{this.burger}} {{this.burger_name}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h2>Add a Burger of your choice:</h2>
            <form class="create-form">
                <div class="form-group burger-list">
                    <label for="hamburguesa">Burger you would like to eat:</label>
                    <input type="text" id="hamburguesa" name="burger_name" required>
                </div>
                <button type="submit" class="btn btn-success">Add a Burger</button>
            </form>
        </div>
    </div>
</div>